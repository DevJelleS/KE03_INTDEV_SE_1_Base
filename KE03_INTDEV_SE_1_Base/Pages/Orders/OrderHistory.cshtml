@page "{customerId:int}"
@model KE03_INTDEV_SE_1_Base.Pages.Orders.OrderHistoryModel
@{
    ViewData["Title"] = "Bestelgeschiedenis";
}

<div class="container">
    <h2>Bestelgeschiedenis voor @Model.Customer.Name</h2>
    
    <div class="row mb-4">
        <div class="col-md-12">
            <a asp-page="./CreateOrder" asp-route-customerId="@Model.Customer.Id" class="btn btn-primary">Nieuwe Bestelling</a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            @if (!Model.Orders.Any())
            {
                <div class="alert alert-info">
                    <i class="fas fa-info-circle"></i> Geen bestellingen gevonden voor deze klant.
                </div>
            }
            else
            {
                @foreach (var order in Model.Orders)
                {
                    <div class="card mb-4">
                        <div class="card-header">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <strong>Bestelling #@order.Id</strong>
                                    <span class="ms-2 badge bg-@(order.Status == "Confirmed" ? "success" : "warning")">
                                        @(order.Status == "Confirmed" ? "Bevestigd" : "In behandeling")
                                    </span>
                                </div>
                                <div>
                                    <small class="text-muted">@order.OrderDate.ToString("g", new System.Globalization.CultureInfo("nl-NL"))</small>
                                </div>
                            </div>
                        </div>
                        <div class="card-body">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Product</th>
                                        <th>Aantal</th>
                                        <th>Prijs</th>
                                        <th>Subtotaal</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in order.OrderProducts)
                                    {
                                        <tr>
                                            <td>@item.Product.Name</td>
                                            <td>@item.Quantity</td>
                                            <td>€@item.Product.Price</td>
                                            <td>€@(item.Product.Price * item.Quantity)</td>
                                        </tr>
                                    }
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <th colspan="3">Totaal</th>
                                        <th>€@order.Total</th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</div> 